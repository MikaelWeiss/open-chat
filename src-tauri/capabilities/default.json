{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for main and mini-chat windows",
  "windows": ["main", "mini-chat"],
  "permissions": [
    "core:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "core:window:allow-start-dragging",
    "opener:default",
    "shell:default",
    "shell:allow-open",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-clear",
    "store:allow-save",
    "store:allow-load",
    "sql:default",
    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-execute",
    "keyring:default",
    "keyring:allow-get-password",
    "keyring:allow-set-password",
    "keyring:allow-delete-password",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read-file",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/keys.enc" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$APPDATA/keys.enc" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$APPDATA/keys.enc" }]
    }
  ]
}
