{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Open Chat",
  "version": "0.2.1",
  "identifier": "org.weisssolutions.openchat",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Open Chat",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "resizable": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:open_chat.db"]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/mikaelweiss/open-chat/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgxOTE2MDMyQUM3N0FCMApSV1N3ZXNjcUF4WVpDTFpZSUprdWhWYXZxVG8wQVgvVityV2tRSXVmdlZjS3U0RjF5bGZDeUJjNQo="
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "background": "./images/dmg-background.png"
      }
    }
  }
}
