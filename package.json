{
  "name": "open-chat",
  "version": "1.0.0",
  "description": "A minimal, modern chat application for multiple LLM providers",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:vite\" \"pnpm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && NODE_ENV=development electron .",
    "build": "vite build",
    "build:app": "vite build && electron-builder",
    "preview": "vite preview",
    "start": "pnpm build && electron .",
    "start:quick": "electron ."
  },
  "keywords": [
    "chat",
    "llm",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.408.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "zustand": "^4.5.4"
  }
}
