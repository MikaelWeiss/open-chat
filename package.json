{
  "name": "open-chat",
  "version": "1.0.0",
  "description": "A minimal, modern chat application for multiple LLM providers",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:build\" \"pnpm:dev:electron\"",
    "dev:build": "node build.js --watch",
    "dev:electron": "wait-on dist/index.html && NODE_ENV=development electron .",
    "build": "node build.js",
    "build:app": "node build.js && electron-builder",
    "start": "pnpm build && electron .",
    "start:quick": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "chat",
    "llm",
    "electron",
    "react"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "37.2.4",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.19.12",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.408.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "tiktoken": "^1.0.21",
    "zustand": "^4.5.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
