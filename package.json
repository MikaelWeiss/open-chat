{
  "name": "open-chat",
  "version": "0.0.1",
  "description": "A minimal, modern chat application for multiple LLM providers",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:build\" \"npm run dev:electron\"",
    "dev:build": "node build.js --watch",
    "dev:electron": "wait-on dist/index.html && NODE_ENV=development electron .",
    "build": "node build.js",
    "build:analyze": "node build.js && node -e \"console.log('\\nðŸ“Š Build analysis saved to dist/metafile.json\\nView chunks at: https://esbuild.github.io/analyze/')\"",
    "build:app": "node build.js && electron-builder",
    "start": "electron-forge start",
    "start:quick": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "chat",
    "llm",
    "electron",
    "react"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "npm@10.14.0",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/plugin-fuses": "^7.8.2",
    "@electron/fuses": "^2.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "37.2.4",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@telemetrydeck/sdk": "^2.0.4",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.408.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "tiktoken": "^1.0.21",
    "zustand": "^4.5.4"
  }
}
